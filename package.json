{
  "name": "@cork-labs/monkfish-logger",
  "version": "0.6.0",
  "description": "Logger adapter for Node.js framework Monkfish",
  "license": "MIT",
  "homepage": "https://github.com/cork-labs/monkfish-logger",
  "author": "Andre Torgal <andre.torgal@gmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/cork-labs/monkfish-logger.git"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "dev": "_mocha --require ts-node/register --watch-extensions ts --watch --recursive src/**/*.spec.* test/**/*.spec.*",
    "lint": "tslint -p .",
    "lint-fix": "tslint -p . --fix",
    "test": "npm run test-u && npm run test-i",
    "test-u": "nyc _mocha --require ts-node/register --recursive src/**/*.spec.*",
    "test-i": "nyc _mocha --require ts-node/register --recursive test/**/*.spec.*",
    "coverage": "node_modules/.bin/http-server coverage/",
    "clean": "rm -rf .nyc_output coverage build",
    "dist": "rm -rf dist; tsc -b src/",
    "build": "npm run clean; npm run lint && npm run test && npm run dist",
    "pub": "git push && npm run build && npm-bump patch"
  },
  "dependencies": {
    "@types/bunyan": "^1.8.5",
    "bunyan": "^2.0.2"
  },
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/chai-as-promised": "^7.1.0",
    "@types/mocha": "^5.2.5",
    "@types/node": "^10.12.18",
    "@types/sinon-chai": "^3.2.2",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "eslint": "^4.10.0",
    "eslint-config-standard": "^10.2.1",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-node": "^5.2.1",
    "eslint-plugin-promise": "^3.6.0",
    "eslint-plugin-standard": "^3.0.1",
    "http-server": "^0.11.1",
    "mocha": "^5.2.0",
    "nyc": "^13.1.0",
    "sinon": "^7.2.2",
    "sinon-chai": "^3.3.0",
    "ts-node": "^7.0.1",
    "tslint": "^5.12.1",
    "typescript": "^3.2.2"
  }
}
